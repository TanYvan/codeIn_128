<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <html xmlns="http://www.w3.org/1999/xhtml">
  <head><title>添加起草信息</title>
    <%= javascript_include_tag :defaults%>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>
    <%= javascript_include_tag :defaults%>
    <script language="javascript">
      function r_s(){
       new Ajax.Request('/award/p_set?draftsman_typ='+document.getElementById("award_draftsman_typ").value, {asynchronous:true, evalScripts:true}); 
       return false;
      }
      function checkForm(){
        if(document.getElementById("award_draftsman").value==""){
          alert("请选择起草人");
          return false;
        }
        return true;
      }
    </script>
  </head>
  <body>
    <br/>
    <div class="cDGray" align="center">添加起草信息 <%=link_to "返回",:action=>"award_detail_list",:p_id=>params[:p_id]%>
      <div style="color:red"><%=flash[:notice]%></div>
    </div>
    <%form_for :award ,:url=>{:action=>"award_detail_create",:p_id=>params[:p_id]},:html =>{:onsubmit=>"return checkForm();"}   do |f|%>
      <table class="list">        
        <tr>
          <th>类型</th>
          <td>
            <%op=TbDictionary.find(:all,:conditions=>"typ_code='0059' and state='Y' and used='Y'",:order=>'ind asc,data_val asc',:select=>"data_val,data_text")%>
            <%=f.collection_select(:typ, op,:data_val,:data_text)%>
          </td>
        </tr>
        <tr>
          <th>
            起草人类型
          </th>
          <td>
            <%=f.select(:draftsman_typ,[["仲裁员","0001"],["助理","0002"]],options={},html_options={:onchange=>"r_s();"})%>
          </td>
        </tr>
        <tr>
          <th>起草人</th>
          <td>
            <div id=p_s1>
            <%=f.select(:draftsman,@pb)%>
            </div>
          </td>
        </tr>
        <tr>
          <th>
            备注：
          </th>
          <td>
            <%=f.text_area :remark,:rows=>4%>
          </td>
        </tr>
      </table>
      <div align="center">
        <%=submit_tag "提交" %>
      </div>
    <%end%>
  </body>
</html>
