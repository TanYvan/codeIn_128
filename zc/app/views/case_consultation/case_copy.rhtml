<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <html xmlns="http://www.w3.org/1999/xhtml">
  <head><title>案件复制</title>
    <%= javascript_include_tag  'WebCalendar'%>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>
    <%= javascript_include_tag :defaults%>
    <script language="javascript">
      function checkForm(){
        if ( /^[0-9]*[1-9][0-9]*$/.test(document.getElementById("num").value) || /^[1-9]d*.d*|0.d*[1-9]d*|0?.0+|0$/.test(document.getElementById("num").value)){
        }
        else{
          alert("请填入数量！");
          return false;
        }

       if(confirm("您确认要复制案件吗？"))
       {
          return true;
       }

        return false;
      }
    </script>
  </head>
  <body>
    <div class="title"><span class="cBlue">案件复制</span></div>
    <div style="color:red"><%=flash[:notice]%></div>
    <%form_for :case ,:url=>{:action=>"case_copy_do", :id=>@case},:html =>{:onsubmit=>"return checkForm();"}  do |f|%>
      <table class="list" width="95%">
        <tr>
          <td>
            复制<%=@case.recevice_code%>号咨询案件<input type='text' id="num" name="num" value="0"/>份
          <%=submit_tag "创建" %>
          </td>
        </tr>
      </table>
    <%end%>
</body>
</html>