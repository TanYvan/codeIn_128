<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <html xmlns="http://www.w3.org/1999/xhtml">
  <head><title>批量修改 校核工作信息</title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
    <%= javascript_include_tag  'WebCalendar'%> 
    <%= javascript_include_tag :defaults%>
    <script language="javascript">
      function r_s(i,typ){
        if (document.getElementById("grade_id_"+i).value!=''){
          new Ajax.Request('/remuneration5_set/rmb_all_set?grade=' + document.getElementById("grade_id_"+i).value + '&i=' + i + '&typ=' + typ, {asynchronous:true, evalScripts:true});
          return false;
        }
      }
      function su(){
        <%for p in @remun%>
        obj=document.getElementById("new_rmb_id_<%=p.id%>");
        if ( /^[0-9]*[1-9][0-9]*$/.test(obj.value) || /^[1-9]d*.d*|0.d*[1-9]d*|0?.0+|0$/.test(obj.value) ) 
          {     
          }     
          else     
            {    
              alert("请输入数字！");   
              return false;    
            }
        <%end%>
        var commit = document.getElementsByName("commit");
        for(i=0; i<commit.length; i++)
        {
          commit[i].style.display='none';
        }
      }
    </script>
  </head>
  <body>
  <div class="title"><span class="cBlue">批量修改 校核工作信息</span></div>
  <div align="center">
 <%=link_to "返回",:action=>"list_2"%>
  </div>
 <div style="color:red"><%=flash[:notice]%></div>
    <%form_for :remun ,:url=>{:action=>"update_all_2"},:html=>{:onsubmit=>"return su();"}   do |f|%>
      <table cellspacing="1" class="adminlist">
        <thead>
          <tr >
            <th nowrap>
              校核类型
            </th>
            <th nowrap>
              校核人员
            </th>
            <th nowrap>
              类别和档次
            </th>
            <th nowrap>
              金额
            </th>
            <th nowrap>
              备注
            </th>
          </tr>
        </thead>
        <tbody>
        <%i=0%>
        <%for p in @remun%>
          <%if TbBonusPenalty.find(:first,:conditions=>"recevice_code='#{session[:recevice_code_2]}' and typ='0003' and p='#{p.p}' and used='Y' and extend_code=''")!=nil %>
            <tr class="row<%=i % 2%>">
              <input type="hidden" id="hid_id_<%=p.id%>" name="hid_name_<%=p.id%>" value="<%=p.id%>" />
              <td>
              <%=TbDictionary.find(:first,:conditions=>"typ_code='0040' and data_val='#{p.typ}'").data_text%>
              </td>
              <td>
                <%=User.find_by_code(p.p).name%>
              </td>
              <td>
                <%op=TbDictionary.find(:all,:conditions=>"typ_code='0056' and state='Y' and data_parent='#{p.typ}'",:order=>'data_text',:select=>"data_text")%>
                <select id="grade_id_<%=p.id%>" name="grade_name_<%=p.id%>" onchange="r_s(<%=p.id%>,'<%=p.typ%>');">
                  <%chec=''%>
                  <%for pp in op%>
                    <%if pp.data_text==p.grade%>
                      <%chec="selected='selected'" %>
                    <%else%>
                      <%chec='' %>
                    <%end%>
                    <option value="<%=pp.data_text%>" <%=chec%> ><%=pp.data_text%></option>
                  <%end%>
                </select> 
              </td>
              <td>
                <input type="hidden" id="old_rmb_id_<%=p.id%>" name="old_rmb_name_<%=p.id%>" value="<%=p.rmb%>" />
                <div id='rmb_all_set_<%=p.id%>'>
                  <input type="text" id="new_rmb_id_<%=p.id%>" name="new_rmb_name_<%=p.id%>" value="<%=p.rmb%>" />
                </div>
              </td>
              <td>
                <input type="text" id="remark_id_<%=p.id%>" name="remark_name_<%=p.id%>" value="<%=p.remark%>" />
              </td>
            </tr>
            <%i=i+1%>
          <%end%>
        <%end%>
        </tbody>
      </table>
      <div align="center">
        <%=submit_tag "提交" %>
      </div>
    <%end%>
            
  </body>
</html>