<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>修改密码</title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
      <script language="javascript">
      function OnSubmit() {
        pwd1=document.getElementById("user_password").value;
        pwd2=document.getElementById("user_password_confirmation").value;
        if (pwd2!=pwd1) {
          alert("您两次输入的密码不一致！");
          return false;
        }
        else {
          return true;
        }
      }
    </script>
  </head>
  <body >
    <br><br>
    <% form_for :user,  :url=>{:action => 'change_password_do',:id => @user.id}  do |f|%>
      <table class="list">
        <tr>
          <th>编码 : </th>
        <td><%= @user.code %></td></tr>
        <tr>
          <th>名称 : </th>
          <td>
        <%= @user.name %></td></tr>
        <tr>
          <th>原密码 : </th>
          <td>
            <input type="password" id="old_password" name="old_password" value='' />
        </td></tr>
        <tr>
          <th>新密码 : </th>
          <td>
            <%= f.password_field :password  %>
            <div style="color:red"><%=error_message_on(:user,:password)%></div>
        </td></tr>
        <tr>
          <th>新密码确认 : </th>
          <td>
            <%= f.password_field :password_confirmation  %>
        </td></tr>
      </table>
      <br><div align="center">
      <%= submit_tag '确定',:onclick=>"return OnSubmit();" %></div>
    <% end %>

  </body>

</html>
