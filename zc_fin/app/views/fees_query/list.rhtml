          </th>
        </tr>
      </thead>
      <tbody>
        <%i=0%>
        <%for c in @case%>
          <%sr=TbShouldRefund.sum("rmb_money - redu_rmb_money - re_rmb_money",:conditions=>"used='Y' and typ<>'0002' and typ<>'0003' and typ<>'0005' and typ<>'0006' and state<>3 and recevice_code='#{c.recevice_code}'")%>
          <%rrr=TbShouldRefund.sum("rmb_money",:conditions=>"used='Y' and typ<>'0002' and typ<>'0003' and typ<>'0005' and typ<>'0006' and state<>3 and recevice_code='#{c.recevice_code}'")%>
          <%if sr==nil%>
            <%sr=0%>
          <%end%>
          <%if sr!=0 and sr!='0'%> 
          <tr class="row<%=i % 2%>">
            <td>
