              <%end%>
            </td>
            <td>
              <%sr_1=TbShouldRefund.sum("rmb_money",:conditions=>"used='Y' and typ<>'0002' and typ<>'0003' and typ<>'0005' and typ<>'0006' and state<>3 and recevice_code='#{c.recevice_code}'")%>
              <%if sr_1==nil%>
