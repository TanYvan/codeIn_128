<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <html xmlns="http://www.w3.org/1999/xhtml">
  <head><title>修改 调查取证报酬</title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
    <%= javascript_include_tag :defaults%>
    <script language="javascript">
      function r_s(){
        if (document.getElementById("remun_grade").value!=''){
          new Ajax.Request('/remuneration8_set/rmb_set?remun_grade='+document.getElementById("remun_grade").value, {asynchronous:true, evalScripts:true});
          return false;
        }
      }
    </script>
  </head>
  <body>
  <div class="title"><span class="cBlue">修改 调查取证报酬</span></div>
  <div align="center">
 <%=link_to "返回",:action=>"list_2"%>
  </div>
 <div style="color:red"><%=flash[:notice]%></div>
    <%form_for :remun ,:url=>{:action=>"update_2",:id=>params[:id],:old_rmb=>@remun.rmb}  do |f|%>
      <table class="list">
        <tr>
          <th>
            人员类型:
          </th>
          <td>
            <%@p_typ={'0001'=>'仲裁员','0002'=>'助理'}%>
            <%=@p_typ[@remun.p_typ]%>
          </td>
        </tr>
        <tr>
          <th>
            人员:
          </th>
          <td>
            <%if @remun.p_typ=='0001'%>
            <%=TbArbitman.find_by_code(@remun.p).name%>
            <%else%>
            <%=User.find_by_code(@remun.p).name%>
            <%end%>                                               
          </td>
        </tr>
        <tr>
          <th>
            类别和档次:
          </th>
          <td>
            <%op=TbDictionary.find(:all,:conditions=>"typ_code='0053' and state='Y'",:order=>'data_text',:select=>"data_val,data_text")%>
            <%=f.collection_select(:grade,op,:data_text,:data_text,options={},html_options={:onchange=>"r_s();"})%>   
            <div style="color:red"><%=error_message_on(:remun,:grade)%></div>
          </td>
        </tr>
        <tr>
          <th>
            金额:
          </th>
          <td>
            <div id='rmb_set'>
              <%=f.text_field(:rmb)%>  
            </div>
            <div style="color:red"><%=error_message_on(:remun,:rmb)%></div>
          </td>
        </tr>
         <tr>
          <th>
            备注:
          </th>
          <td>
            <%=f.text_field(:remark,:size=>50)%>                                      
            <div style="color:red"><%=error_message_on(:remun,:remark)%></div>
          </td>
        </tr> 
      </table>
      <div align="center">
        <%=submit_tag "提交" ,:onclick=>"this.style.display='none'"%>
      </div>
    <%end%>
            
  </body>
</html>